<div class="text-black">
    <div class="text-2xl mb-5">Experience</div>
    <hr>
    <div class="mt-3 px-5 divide-y">
        {{#each data}}
            <div class="py-3">
                <div class="font-bold text-lg">{{title}}</div>
                <div class="font-light text-gray-700">{{{description}}}</div>
                <div class="mt-2">
                    {{#if start_date}} {{start_date}} {{/if}}
                    {{#if end_date}} - {{end_date}} {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
</div>
<div class="text-gray-600">
    <div class="text-2xl mb-5">Experience</div>
    <hr>
    <div class="border rounded mt-3 px-5 shadow-md hover:shadow-lg duration-500 divide-y">
        {{#each data}}
            <div class="py-3">
                <div class="font-bold text-lg">{{title}}</div>
                <div class="font-light">{{{description}}}</div>
                <div class="mt-2">
                    {{#if start_date}} {{start_date}} {{/if}}
                    {{#if end_date}} - {{end_date}} {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
</div>
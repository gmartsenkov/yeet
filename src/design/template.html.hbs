<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200&display=swap" rel="stylesheet"> 
  <style>
    body { font-family: 'Raleway', sans-serif; }
  </style>
</head>
<body class="bg-gray-100 font-sans max-w-screen-lg m-auto">
    <div class="border-2 rounded text-gray-600 mt-10 mb-3 p-4 divide-y bg-white shadow-md">
      <div class="grid grid-rows-3 grid-flow-col mb-3 text-black">
        <div class="row-span-3 w-32">
          <img src="{{avatar}}">
        </div>
        <div class="col-span-12 font-thin text-3xl">{{name}}</div>
        <div class="col-span-12 font-thin text-base">
          Email: <a href="mailto:{{email}}" class="font-light">{{email}}</a>
          <br>
          Website: <a href="{{website}}" class="font-light">{{website}}</a>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-3 pt-5">
        {{#each sections}}
          {{> (lookup this "type") }}
        {{/each}}
      </div>
    </div>
</body>
</html>